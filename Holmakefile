INCLUDES=$(HOLDIR)/Manual/Tools
index.html: guidebook.md
	pandoc -S -s -c style.css --toc $< -o $@
guidebook.md: guidebook.smd $(HOLDIR)/Manual/Tools/polyscripter
	$(HOLDIR)/Manual/Tools/polyscripter < $< > $@
.PHONY: publish
publish: index.html style.css
	rsync index.html hol-theorem-prover.org:/srv/hol-webpages/topublish/guidebook/
	rsync style.css hol-theorem-prover.org:/srv/hol-webpages/topublish/guidebook/
